<Window xmlns:local="clr-namespace:BGMSyncVisualizer" xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="BGMSyncVisualizer.MainWindow"
        Width="800" Height="600" Title="BPM Sync Visualizer">
  <DockPanel Margin="10">
    <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
      <Button Name="SelectFileButton" Content="ファイルを選択" Width="120" />
      <TextBlock Name="StatusLabel" Foreground="Red" />
    </StackPanel>
    <Grid DockPanel.Dock="Top" Height="200" Margin="0,10,0,10">
      <local:WaveformControl Name="WaveformCanvas" />
    </Grid>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
      <TextBlock Text="BPM:" VerticalAlignment="Center" />
      <NumericUpDown Name="BPMInput" Minimum="30" Maximum="300" Value="120" Width="100" />
      <Button Name="PlayButton" Content="再生" Width="80" />
      <Button Name="StopButton" Content="停止" Width="80" />
    </StackPanel>
  </DockPanel>
</Window>
